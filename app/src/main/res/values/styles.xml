<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4B2A82</item>
        <item name="colorPrimaryDark">#320A63</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <!-- Logo Style -->
    <style name="LogoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:src">@drawable/logo</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:backgroundTint">#4B2A82</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <!-- Text Style -->
    <style name="TextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <!-- Large Text Style -->
    <style name="LargeTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#4B2A82</item>
    </style>

    <!-- Small Text Style -->
    <style name="SmallTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
    </style>

</resources>